generator client {
  provider = "prisma-client"
  output ="./generated"
}

datasource db {
  provider = "postgresql"
}


model Activity {
  activityId String @id @default(cuid())
  date       String
  description String
}

model Sale {
  saleId String @id @default(cuid())
  status SaleStatus @default(Open)
  saleDate String
  amount Float
  stage String
  nextActivity String
  saleName String
}

enum SaleStatus {
  Open
  Lost
  Sold
  Stalled
}